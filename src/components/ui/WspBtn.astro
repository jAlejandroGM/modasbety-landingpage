---
import { Icon } from "astro-icon/components";
import { SOCIAL_LINKS, MESSAGES } from "../../data/siteData";
---

<a
  href={SOCIAL_LINKS.whatsapp(MESSAGES.whatsappDefault)}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Solicitar cotización por WhatsApp - Abre en una nueva ventana"
  class="wsp-btn group relative inline-flex overflow-hidden"
>
  <span
    class="absolute inset-0 rounded-full bg-whatsapp/80 transform -translate-x-full transition-transform duration-700 group-hover:translate-x-0 -z-10"
    aria-hidden="true"></span>

  Cotiza tu diseño exclusivo
  <Icon
    name="mdi:whatsapp"
    class="h-8 w-8 text-current transition-all duration-300"
  />
</a>
