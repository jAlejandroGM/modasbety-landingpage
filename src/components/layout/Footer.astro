---
import SocialNav from "../ui/SocialNav.astro";

const currentYear = new Date().getFullYear();
---

<footer class="flex flex-col items-center gap-4 pb-16" role="contentinfo">
  <p>
    © <span id="year">{currentYear}</span> Modas Bety - Atelier de Moda y Confección
    para Damas
  </p>
  <SocialNav />
  <address class="not-italic text-sm opacity-80">
    Desarrollado con ☕ por
    <a
      href="https://alguzdev.vercel.app/"
      target="_blank"
      rel="noopener noreferrer"
      class="text-sakura-hover"
      aria-label="Ver perfil de GitHub del desarrollador">alguzdev</a
    >
  </address>
</footer>

<script>
  const yearSpan = document.getElementById("year");
  if (yearSpan) {
    yearSpan.textContent = new Date().getFullYear().toString();
  }
</script>
